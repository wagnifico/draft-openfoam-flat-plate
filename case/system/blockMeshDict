FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

L      1; // plate length
alpha  0.785398; // plate angle, rad
//alpha  0.0; // plate angle, rad

Lin    1; // upstream length
Lout   1; // downstream length
Ly     3; // domain height
Lz     1; // domain thickness

// Divisions in x/y/z directions. Can be unequal.
nx   10;
ny   20;
nz   1;

y_upstream      #eval{ $Ly/2 + $L*sin($alpha)/2 }; // y of upstream of plate
x_upstream      #eval{ $Lin }; // x of top of plate

y_downstream    #eval{ $Ly/2 - $L*sin($alpha)/2 }; // y of bottom of plate
x_downstream    #eval{ $x_upstream + $L*cos($alpha) }; // x of bottom of plate

Lx         #eval{ $x_downstream + $Lout }; // domain total length

vertices
(
    // bottom-upstream block
    (0    0      0)
    ($Lin 0      0)
    ($Lin $y_upstream 0)
    (0    $y_upstream 0)

    (0    0      $Lz)
    ($Lin 0      $Lz)
    ($Lin $y_upstream $Lz)
    (0    $y_upstream $Lz)

    // bottom-center block
    ($x_downstream 0         0)
    ($x_downstream $y_downstream 0)

    ($x_downstream 0         $Lz)
    ($x_downstream $y_downstream $Lz)

    // bottom-donwstream block
    ($Lx 0         0)
    ($Lx $y_downstream 0)

    ($Lx 0         $Lz)
    ($Lx $y_downstream $Lz)
    
    // upper-upstream block
    ($x_upstream $Ly    0)
    (0      $Ly    0)

    ($x_upstream $Ly    $Lz)
    (0      $Ly    $Lz)

    // upper-center block
    ($x_downstream $Ly    0)

    ($x_downstream $Ly   $Lz)
    
    // upper-donwstream block
    ($Lx       $Ly    0)

    ($Lx       $Ly   $Lz)

);

blocks
(
    // bottom-upstream block
    hex (0 1 2 3 4 5 6 7) ($nx $ny $nz) grading (1 1 1)
    // bottom-center block
    hex (1 8 9 2 5 10 11 6) ($nx $ny $nz) grading (1 1 1)
    // bottom-donwstream- block
    hex (8 12 13 9 10 14 15 11) ($nx $ny $nz) grading (1 1 1)
    // upper upstream block
    hex (3 2 16 17 7 6 18 19) ($nx $ny $nz) grading (1 1 1)
    // upper-center block
    hex (2 9 20 16 6 11 21 18) ($nx $ny $nz) grading (1 1 1)
    // upper-donwstream block
    hex (9 13 22 20 11 15 23 21) ($nx $ny $nz) grading (1 1 1)
);

edges
(
);

faces
(
);

boundary
(
    frontAndBack
    {
        type empty;
        faces
        (
            (0 1 2 3)
            (4 5 6 7)
            (1 8 9 2)
            (5 10 11 6)
            (8 12 13 9)
            (10 14 15 11)
            (3 2 16 17)
            (7 6 18 19)
            (2 9 20 16)
            (6 11 21 18)
            (9 13 22 20)
            (11 15 23 21)
        );
    }

    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
            (3 7 19 17)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (13 15 14 12)
            (22 23 15 13)
        );
    }

    topAndBottom
    {
        type patch;
        faces
        (
            (1 5 4 0)
            (5 8 10 1)
            (8 12 14 10)
            (17 19 18 16)
            (16 18 20 21)
            (20 21 22 23)
        );
    }
);


